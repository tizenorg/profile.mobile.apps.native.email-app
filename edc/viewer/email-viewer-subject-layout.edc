//header layout
#define HEADER_LAYOUT_RIGHT_PADDING 32
#define HEADER_LAYOUT_LEFT_PADDING 32
#define HEADER_LAYOUT_TOP_PADDING 24
#define HEADER_LAYOUT_BOTTOM_PADDING 22
#define HEADER_SUBJECT_BOTTOM_PADDING 24
#define HEADER_DETAILS_BTN_RIGHT_PADDING 32
#define HEADER_DETAILS_BTN_MIN_WIDTH 150
#define HEADER_DETAILS_BTN_MIN_HEIGHT 50

#define HEADER_FAVOURITE_BTN_OUTER_SIZE 80
#define HEADER_FAVOURITE_BTN_INNER_SIZE 50
#define HEADER_FAVOURITE_BTN_INNER_PADDING 15
#define HEADER_FAVOURITE_BTN_TOP_PADDING (17 + HEADER_FAVOURITE_BTN_INNER_PADDING)
#define HEADER_FAVOURITE_BTN_RIGHT_PADDING (17 + HEADER_FAVOURITE_BTN_INNER_PADDING)

//attachment layout
#define ATTACHMENT_LAYOUT_HEIGHT	80
#define ATTACHMENT_LEFT_PADDING		32
#define ATTACHMENT_RIGHT_PADDING	17
#define ATTACHMENT_TEXT_SIZE	36

//body button
#define DOWNLOAD_BUTTON_MIN_HEIGHT	96
#define DOWNLOAD_BUTTON_TEXT_SIZE	32
#define DOWNLOAD_BUTTON_TEXTBLOCK_HEIGHT_MIN 44
#define DOWNLOAD_BUTTON_TEXTBLOCK_PADDING_BOTTOM_HEIGHT 32
#define TRANSPARENT_COLOR_VALUE 0 0 0 0

#define EVENT_PART(NAME, SRC)  \
		part { name: NAME; \
			type: SWALLOW; \
			scale: 1; \
			description { \
				state: "default" 0.0; \
				rel1.to: SRC; \
				rel2.to: SRC; \
				color: 0 0 0 0; \
			} \
		}

group {
	name: "ev/recipient/base";
	parts {
		E_SWALLOW_BG
		E_PART_SWALLOW("ev.swallow.content",
			description { state: "default" 0.0;
			}
		)
	}
}

group {
	name: "ev/header/base";
	styles {
		style { name: "date_text_style";
			base: "font=BreezeSansFallback align=right font_size=28 color=#3DB9CC wrap=word ellipsis=1.0";
			tag: "br" "\n";
			tag: "tab" "\t";
		}
	}
	parts {
		E_SWALLOW_BG
		E_PART_PADDING_LEFT(HEADER_LAYOUT_LEFT_PADDING)
		E_PART_PADDING_RIGHT(HEADER_LAYOUT_RIGHT_PADDING)
		E_PART_PADDING_TOP(HEADER_LAYOUT_TOP_PADDING)
		E_PART_PADDING_BOTTOM(HEADER_LAYOUT_BOTTOM_PADDING)

		E_PART_SPACER("favourite_btn.padding.top",
			description { state: "default" 0.0;
				fixed: 0 1;
				align: 0.5 0.0;
				rel2.relative: 1.0 0.0;
				min: 0 HEADER_FAVOURITE_BTN_TOP_PADDING;
			}
		)

		E_PART_SWALLOW("header.favourite.btn",
			description { state: "default" 0.0;
				align: 1 0;
				rel1 {
					relative: 0 1;
					to_x: "padding.right";
					to_y: "favourite_btn.padding.top";
				}
				rel2 {
					relative: 0 1;
					to_x: "padding.right";
					to_y: "favourite_btn.padding.top";
				}
				min: HEADER_FAVOURITE_BTN_INNER_SIZE HEADER_FAVOURITE_BTN_INNER_SIZE;
			}
		)

		E_PART_SPACER("header.favourite_btn.padding.left",
			description { state: "default" 0.0;
				fixed: 1 0;
				align: 1 0.5;
				rel1 {
					relative: 0 0;
					to_x: "header.favourite.btn";
				}
				rel2 {
					relative: 0 1;
					to_x: "header.favourite.btn";
				}
				min: HEADER_FAVOURITE_BTN_RIGHT_PADDING 0;
			}
		)

		E_PART_SWALLOW("header.subject.swallow",
			description { state: "default" 0.0;
				align: 0.5 0;
				rel1 {
					relative: 1 1;
					to_x: "padding.left";
					to_y: "padding.top";
				}
				rel2 {
					relative: 0 1;
					to_x: "header.favourite_btn.padding.left";
					to_y: "padding.top";
				}
			}
		)

		E_PART_SPACER("header.subject.padding.bottom",
			description { state: "default" 0.0;
				align: 0.5 0.0;
				fixed: 0 1;
				rel1 {
					relative: 0 1;
					to_y: "header.subject.swallow";
				}
				rel2 {
					relative: 1 1;
					to_y: "header.subject.swallow";
				}
				min: 0 HEADER_SUBJECT_BOTTOM_PADDING;
			}
		)

		E_PART_SWALLOW("header.details.btn",
			description { state: "default" 0.0;
				align: 0.0 0.5;
				rel1 {
					relative: 1.0 1.0;
					to_x: "padding.left";
					to_y: "header.subject.padding.bottom";
				}
				rel2 {
					relative: 1.0 0.0;
					to_x: "padding.left";
					to_y: "padding.bottom";
				}
				min: HEADER_DETAILS_BTN_MIN_WIDTH HEADER_DETAILS_BTN_MIN_HEIGHT;
			}
		)

		E_PART_SPACER("header.details.btn.padding.right",
			description { state: "default" 0.0;
				align: 0 0.5;
				fixed: 1.0 0.0;
				rel1 {
					relative: 1.0 0.0;
					to_x: "header.details.btn";
				}
				rel2 {
					relative: 1.0 1.0;
					to_x: "header.details.btn";
				}
				min: HEADER_DETAILS_BTN_RIGHT_PADDING 0;
			}
		)

		E_PART_TEXTBLOCK("header.date.text",
			description { state: "default" 0.0;
				align: 0.0 0.5;
				text {
					style: "date_text_style";
					min: 0 1;
				}
				rel1 {
					relative: 1.0 1.0;
					to_x: "header.details.btn.padding.right";
					to_y: "header.subject.padding.bottom";
				}
				rel2 {
					relative: 0.0 0.0;
					to_x: "padding.right";
					to_y: "padding.bottom";
				}
			}
		)
	}
}

group {
	name: "ev/attachment/base";
	images {
		image: "viewer_icon/email_icon_arrow_next.png" COMP;
	}
	parts {
		E_PART_BASE_H(ATTACHMENT_LAYOUT_HEIGHT)
		E_PART_BG (LIST_BG_COLOR)
		E_PART_PADDING_LEFT(ATTACHMENT_LEFT_PADDING)
		E_PART_PADDING_RIGHT(ATTACHMENT_RIGHT_PADDING)
		E_PART_RECT("attachment.bottom.divider",
			description { state: "default" 0.0;
			fixed: 0 1;
			max: -1 1;
			rel1 {
				relative: 0.0 1.0;
				offset: 0 -1;
			}
			rel2 {
				relative: 1.0 1.0;
			}
			color: AO005;
			}
		)
		E_PART_TEXT("attachment.info.text",
			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1 { relative: 1.0 0.0; to: "padding.left"; }
				rel2 { relative: 0.0 1.0; to_x: "attachment.icon2"; to_y: "padding.right"; }
				text {
					size: ATTACHMENT_TEXT_SIZE;
					min: 0 0;
					align: 0.0 0.5;
				}
				color: ATO018;
			}
		)
		part { name: "attachment.icon2";
			type: IMAGE;
			repeat_events: 0;
			description {
				state: "default" 0.0;
				image.normal: "viewer_icon/email_icon_arrow_next.png";
				color: W023;
				min: 40 40; 
				max: 40 40;
				fixed: 1 1; align: 1.0 0.5;
				rel2 { relative: 0.0 1.0; to: "padding.right"; }
			}
			description {
				state: "pressed" 0.0;
				inherit: "default" 0.0;
				color: W023P;
			}
		}
		E_PART_SWALLOW("attachment.focus.btn",
			description { state: "default" 0.0;
			fixed: 1 1;
				color: 0 0 0 0;
			}
		)
		E_PART_RECT("attachment.event.rect",
			mouse_events: 1;
			description { state: "default" 0.0;
				color: 0 0 0 0;
			}
		)
	}

	programs {
		program { name: "click_layout";
			signal: "mouse,clicked,1";
			source: "attachment.event.rect";
			action: SIGNAL_EMIT "attachment.clicked" "edje";
			after: touch_snd;
		}
		program { name: "touch_snd";
			action: RUN_PLUGIN "touch_sound";
		}
		program { name: "pressed";
			signal: "mouse,down,1";
			source: "attachment.event.rect";
			script {
				set_state(PART:"attachment.icon2", "pressed", 0.0);
			}
		}
		program { name: "unpressed";
			signal: "mouse,up,1";
			source: "attachment.event.rect";
			script {
				set_state(PART:"attachment.icon2", "default", 0.0);
			}
		}
	}
}

